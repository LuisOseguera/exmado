# Aplicación
APP_NAME=DocuWare Export Tool
APP_VERSION=1.0.0
DEBUG=true

# Base de datos
# Por defecto, SQLite. Para PostgreSQL en Docker, podrías usar:
# DATABASE_URL=postgresql://user:password@db:5432/dbname
DATABASE_URL=sqlite:///./docuware_export.db

# Redis y Celery
# "redis" es el nombre del servicio en docker-compose.yml
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# DocuWare API
DOCUWARE_URL=https://your-company.docuware.cloud
DOCUWARE_USERNAME=your_username
DOCUWARE_PASSWORD=your_password
DOCUWARE_TIMEOUT=30

# Directorios
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
TEMP_DIR=./temp
MAX_UPLOAD_SIZE=52428800  # 50MB en bytes

# Jobs
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=7200  # 2 horas
TEST_MODE_LIMIT=10

# WebSocket
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# CORS (agregar el origen de tu frontend)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
